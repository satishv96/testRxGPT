<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <Appenders>

        <!-- Console log -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %c{1} - %m%n"/>
        </Console>

        <!-- File log path defined here -->
        <RollingFile name="FileAppender"
                     fileName="/opt/app/backend/rxgpt-healthcare-svc/logs/RxGPTHealthCare-svc.log"
                     filePattern="/opt/app/backend/rxgpt-healthcare-svc/logs/RxGPTHealthCare-svc-%d{yyyy-MM-dd}-%i.log.gz">

            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n</pattern>
            </PatternLayout>

            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>

    </Loggers>

</Configuration>